let mapleader=' '

set timeout=300

" plugins
" easy-motion
set easymotion
" 文件内跳转
map <leader><leader>s <Plug>(easymotion-s)
" sneak
set sneak
" surround
set surround
" 多光标 
set multiple-cursors
" 注释插件
set commentary
set argtextobj
" 文件操作
" NERDTree"
set NERDTree
nmap <Leader>t :NERDTreeToggle<CR>
" vim-indent-object
set textobj-indent
" vim-paragraph-motion
set vim-paragraph-motion
" which key
set which-key
" disable the timeout option
" set notimeout
" increase the timeoutlen (default: 1000), don't add space around the equal sign =
set timeoutlen=300
let g:WhichKey_ShowVimActions = "true"

syntax on

set hlsearch
set incsearch
set ignorecase
set smartcase
set autoindent
set cindent
set cursorline
set showmode
set number
set relativenumber
set scrolloff=3
set history=2000
set clipboard=unnamed
set laststatus=2
set nobackup
set noswapfile
" 交换单字或行
set exchange
" 屏幕滚动时在光标上下方保留5行预览代码
set so=5

inoremap jk <Esc>
nnoremap <C-n> :noh<cr>

" terminal
nmap <C-\> <Action>(ActivateTerminalToolWindow)

nmap <C-o> <Action>(Back)
nmap <C-i> <Action>(Forward)

" tab
nnoremap H :action PreviousTab<cr>
nnoremap L :action NextTab<cr>

"跳转到声明
nnoremap gD :action GotoDeclaration<cr>
"跳转到实现类
nnoremap gi :action GotoImplementation<cr>
nnoremap gs :action GotoSuperMethod<cr>
" 光标处显示文档"
nnoremap gh :action QuickJavaDoc<cr>
nnoremap <leader>jl :action JumpToLastChange<cr>
"跳转到测试类(没有则自动建立)
nnoremap <leader>gt :action GotoTest<cr>

" 显示参数信息"
nnoremap gp :action ParameterInfo<cr>

"显示当前文件路径
nnoremap <leader>sp :action ShowFilePath<cr>
"显示使用
nnoremap su :action ShowUsages<cr>

" 搜索全部
nnoremap <leader>fg :action SearchEverywhere<cr>
"查找跳转到实体类
" nnoremap <leader>fc :action GotoClass<cr>
"查找跳转到文件
" nnoremap <leader>ff :action GotoFile<cr>
" nnoremap <leader>fs :action GotoSymbol<cr>
"查找跳转到Action
" nnoremap <leader>fa :action GotoAction<cr>
" 查找使用的地方
" nnoremap <leader>fu :action FindUsages<cr>

"重命名
nnoremap rn :action RenameElement<cr>

"修改当前文件的文件名
nnoremap rF :action RenameFile<cr>
" 历史文件
nnoremap <leader>cf :action RecentFiles<cr>
" 打开历史打开项"
nnoremap <leader>rp :action RecentProjectListGroup<cr>
" 打开项目
nnoremap <leader>p :action ActivateProjectToolWindow<cr>

"添加注释
nnoremap gcc :action CommentByLineComment<cr>
vnoremap gc :action CommentByLineComment<cr>

" quick fix
nnoremap ca :action ShowIntentionActions<cr>
nnoremap vv a<space><ESC>:action CodeCompletion<cr>

" 展示错误信息
nnoremap sd :action ShowErrorDescription<cr>
" 跳到下一个错误信息
nnoremap <TAB> :action GotoNextError<cr>
" 跳到上一个错误信息
nnoremap <s-TAB> :action GotoPreviousError<cr>

" 格式化代码
nnoremap == :action ReformatCode<cr>

" 排序import
nnoremap <leader>oi :action OptimizeImports<cr>
